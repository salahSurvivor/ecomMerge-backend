<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="./styles.css">
</head>
<body>
    <div class="product-container animate__animated animate__fadeIn">
        <header class="animate-pop-in" style="animation-delay: 0.1s">
            <input type="text" id="p_id" value="{{p_id}}" hidden>
            <h1>{{p_Name}}</h1>
            <p class="subtitle">{{title}}</p>
        </header>

        <section class="product-showcase">
            <div class="gallery animate-pop-in" style="animation-delay: 0.2s">
                <img src="../../uploads/{{img1}}" alt="{{p_Name}}" class="active">
                <img src="../../uploads/{{img2}}" alt="{{p_Name}} feature">
                <img src="../../uploads/{{img3}}" alt="{{p_Name}} in use">
            </div>
            <div class="product-details animate-pop-in" style="animation-delay: 0.3s">
                <h2>{{description}}</h2>
                <ul class="features">
                    <li>{{feature1}}</li>
                    <li>{{feature2}}</li>
                    <li>{{feature3}}</li>
                </ul>
                <div>
                    <label class="dhs">Price : </label>
                    <span class="price-tag">{{promoPrice}}</span> 
                    <span class="dhs">DHs</span>
                </div>
                <hr>
                <ul class="peyementModeListSection">
                    <h6>Payment by :</h6>
                    {{#value1}}
                    <li>
                        <input type="radio" name="payementMode" id="Paypal" value="Paypal"/>
                        <i class="fab fa-cc-paypal"></i>
                        <label for="Paypal">Paypal</label>
                    </li>
                    {{/value1}}

                    {{#value2}}
                    <li>
                        <input type="radio" name="payementMode" id="Visa-Card" value="Visa Card"/>
                        <i class="fab fa-cc-visa"></i>
                        <label for="Visa-Card">Visa Card</label>
                    </li>
                    {{/value2}}

                    {{#value3}}
                    <li>
                        <input type="radio" name="payementMode" id="Cash-On-Delivery" value="Cash On Delivery"/>
                        <i class="fas fa-money-bill-wave"></i>
                        <label for="Cash-On-Delivery">Cash On Delivery</label>
                    </li>
                    {{/value3}}
                </ul>
                <button class="buy-button animate__animated animate__pulse animate__infinite" id="buyNowBtn">Acheter maintenant</button>
            </div>
        </section>
        <footer class="animate-pop-in" style="animation-delay: 0.4s">
            <p>&copy; 2025 {{storeName}}. All rights reserved.</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./script.js"></script>
    <script>
        // Simple animation triggers
        document.addEventListener('DOMContentLoaded', function() {
            // Add hover effect to payment options
            const paymentOptions = document.querySelectorAll('.peyementModeListSection li');
            paymentOptions.forEach(option => {
                option.addEventListener('click', function() {
                    paymentOptions.forEach(opt => opt.style.background = '');
                    this.style.background = '#e2e8ff';
                });
            });
            
            // Pulse animation for buy button
            const buyButton = document.getElementById('buyNowBtn');
            buyButton.addEventListener('mouseenter', function() {
                this.classList.remove('animate__pulse');
            });
            buyButton.addEventListener('mouseleave', function() {
                this.classList.add('animate__pulse');
            });
            
            // Simple image gallery functionality
            const galleryImages = document.querySelectorAll('.gallery img');
            if (galleryImages.length > 1) {
                galleryImages.forEach(img => {
                    img.addEventListener('click', function() {
                        galleryImages.forEach(i => i.classList.remove('active'));
                        this.classList.add('active');
                    });
                });
            }
        });
    </script>
</body>
</html>